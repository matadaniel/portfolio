---
import Layout from '../layouts/Layout.astro'
import LoadingBar from '../components/LoadingBar.astro'
---

<Layout title="Contact Me">
  <div
    class="fixed top-0 right-1/2 -z-10 mt-24 flex h-screen w-[50vw] min-w-[50vh] translate-x-1/2 items-center justify-center sm:right-0 sm:mt-32 sm:transform-none"
  >
    <LoadingBar />
    <canvas class="h-0 w-0"></canvas>
  </div>
  <main class="mx-4 mb-16 flex flex-col items-center">
    <h1 class="mb-20 mt-[25vh] text-center text-4xl font-semibold leading-normal">
      Let's get in touch! <span class="inline-block animate-shake font-normal">🤝</span>
    </h1>
    <form class="w-[65ch] max-w-full text-xl" netlify netlify-honeypot name="contact" method="POST">
      <p class="hidden">
        <label>
          Don’t fill this out if you’re human: <input name="bot-field" />
        </label>
      </p>
      <input type="hidden" name="form-name" value="contact" />
      <label for="email">Email</label>
      <input
        class="mb-16 block rounded bg-neutral-800 px-2 py-1"
        id="email"
        type="email"
        name="email"
        required
      />
      <label for="message">Message</label>
      <textarea
        class="mb-16 block w-full rounded bg-neutral-800 p-2"
        id="message"
        name="message"
        required
        rows="5"></textarea>
      <button
        class="float-right rounded border-2 bg-[rgb(20,20,20)]/75 px-2 py-1 font-semibold"
        type="submit">Submit</button
      >
    </form>
  </main>
</Layout>

<script>
  setTimeout(() => import('../components/contactRoot'), 1000)
</script>
