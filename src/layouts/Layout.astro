---
import '@fontsource/montserrat/variable.css'
import '@fontsource/montserrat/variable-italic.css'
import Header from '../components/Header.astro'
import LoadingBar from '../components/LoadingBar.astro'

export interface Props {
  title: string
  children: any
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <div
      class="fixed top-0 right-1/2 -z-10 mt-24 flex h-screen w-[50vw] min-w-[50vh] translate-x-1/2 items-center justify-center sm:right-0 sm:mt-32 sm:transform-none"
    >
      <LoadingBar />
      <canvas class="h-0 w-0"></canvas>
    </div>
    <slot />
  </body>
</html>
<style is:global>
  html {
    color: white;
    background-color: rgb(20, 20, 20);
    background-image: radial-gradient(circle, #333 1px, transparent 2px);
    background-size: 40px 40px;
    background-attachment: fixed;
  }

  a:link {
    position: relative;
    color: lightblue;
    display: inline-block;
  }

  a:link:before,
  a:link:after {
    background-color: lightblue;
    content: '';
    height: 0.1em;
    position: absolute;
    bottom: 4px;
    left: 0;
    width: 100%;
    pointer-events: none;
  }

  a:link:after {
    background-color: gray;
  }

  a:visited {
    color: plum;
  }

  a:visited:before {
    background-color: plum;
  }

  a:hover:before,
  a:hover:after {
    animation: load 1s linear infinite;
  }

  a:hover:after {
    animation-delay: 0.5s;
  }

  a:active {
    color: lightcoral;
  }

  a:active:before {
    background-color: lightcoral;
  }

  svg {
    display: inline;
    vertical-align: text-top;
  }

  @keyframes load {
    0% {
      width: 0;
      z-index: 1;
    }
    49.99% {
      z-index: 1;
    }
    50% {
      width: 100%;
      z-index: 0;
    }
    100% {
      width: 100%;
      z-index: 0;
    }
  }
</style>
